{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@json/*": ["src/json/*"],
      "@subcomp/*": ["src/components/subComp*"],
      "@comp/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@utility/*": ["src/assets/utilities/*"],
      "~scss/*": ["src/assets/scss/*"],
      "~img/*": ["src/assets/images/*"]
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
